---
interface Props {
	data: {
		content: string;
	}[];
}

const { data } = Astro.props;
---

<section>
    <h2>Schritte</h2>
    <ol type="1">
      {data.map(step => <li>
        {step.content}
       </li>)}
    </ol>
</section>

<style>
    h2 {
      font-size: var(--font-size-5);
    }
  </style>

<style>
  section {
    padding: var(--size-2);
  }

  ol {
      display: flex;
      flex-direction: column;
      gap: var(--size-2);

      list-style: none;
      counter-reset: li;
  }

  ol li {
    counter-increment: li;
  }

  @supports (grid-template-columns: subgrid) {
    ol {
      display: grid;
      grid-template-columns: min-content 1fr;
    }
    ol li {
      grid-column: 1 / -1;
      display: grid;
      grid-template-columns: subgrid;
    }
  }

  ol li::before {
    content: counter(li) ".";
    margin-right: 0.2rem;
  }

  ol li::before {
    text-align: end;
  }
</style>