---
interface Props {
	data: string[];
}

const { data } = Astro.props;
---

<section>
  <h2>Tags</h2>
  <ul>
    {
      data.map((tag) => (
        <li>
        {tag}
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    padding: var(--size-2);
    display: flex;
    flex-direction: column;
    gap: var(--size-2);

    background-color: var(--accent);
    border-radius: var(--radius);
    height: max-content;
  }

  h2 {
    font-size: clamp(1rem, 2.5vw + 1rem, 2rem);
  }

  ul {
    list-style-position: inside;
    display: flex;
    flex-direction: column;
    gap: var(--size-2);
  }
</style>
