---
import { getCollection } from "astro:content";

import BaseLayout from "@layouts/base_layout.astro";
import Steps from "@components/steps.astro";
import Ingredients from "@components/ingredients.astro";

export async function getStaticPaths() {
	const recipes = await getCollection("recipes");
	return recipes.map((recipe) => ({
		params: { id: recipe.id },
		props: { recipe },
	}));
}

const { recipe } = Astro.props;
---
<BaseLayout title={recipe.data.title}>
  <article data-pagefind-body>
    <header>
      <h1 data-pagefind-meta="title">{recipe.data.title}</h1>
      <div class="info">
        <span>FÃ¼r {recipe.data.people} Personen</span>
      </div>
    </header>
    <div class="content">
      <Ingredients data={recipe.data.ingredients}/>
      <Steps data={recipe.data.steps} />
    </div>
  </article>
</BaseLayout>

<style>
  h1 {
    font-size: var(--font-size-6);
  }

  article {
    display: flex;
    flex-direction: column;
    gap: var(--size-5);
  }

  .info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }

  .content {
    display: flex;
    flex-wrap: wrap;
    gap: var(--size-fluid-5)
  }

  .content > :global(:first-child)  {
    flex: 1 0 15rem;
  }

  .content > :global(:last-child)  {
    flex: 1 1 30rem;
  }
</style>