    "steps": [
        {
            "content": "Backofen auf 145 Grad Umluft vorheizen."
        },
        {
            "content": "Fleisch abtupfen und mit etwas Salz einreiben."
        },
        {
            "content": "Rapsöl in einem ofenfesten Schmortopf erhitzen und Fleisch darin ca. 10 Minuten von allen Seiten braun anbraten."
        },
        {
            "content": "Das Fleisch wieder herausnehmen."
        },
        {
            "content": "Schalloten in grobe Stücke schneiden. Knoblauch und Ingwer fein hacken. Schalloten, Knoblauch und Ingwer im Schmortopf ca. 3 Min. anrösten."
        },
        {
            "content": "Tomatenmark hinzugegen und ca. 1 Min. mit anrösten"
        },
        {
            "content": "Zimtpulver, Anispulver, Chillipulver und Kreuzkümmel dazugeben"
        },
        {
            "content": "Essig, Kokosmilch und Apfelsaft aufgießen"
        },
        {
            "content": "Fleisch in den Topf geben"
        },
        {
            "content": "Topf im Ofen für 3 Stunden mit Deckel garen"
        },
        {
            "content": "Danach eine weitere Stunde ohne Deckel im Ofen garen"
        },
        {
            "content": "Den Topf aus dem Ofen nehmen und das Fleisch mit zwei Gabeln zerteilen"
        }
    ]
